<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--
        ** Start of ACCOUNT section
        -->
        <TextView
            style="@style/HeadingStyle"
            android:text="Account:"/>
        <LinearLayout
            style="@style/Row">
            <EditText
                style="@style/Cell"
                android:inputType="number"
                android:id="@+id/ttalk_recharge"
                android:layout_weight="60"/>
            <Space
                style="@style/Cell"
                android:layout_weight="5"/>
            <Button
                style="@style/Cell"
                android:layout_weight="35"
                android:onClick="getService"
                android:tag="ttalk_recharge"
                android:text="Recharge"/>
        </LinearLayout>

        <LinearLayout
            style="@style/Row">
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
            <Button
                style="@style/Cell"
                android:layout_weight="40"
                android:onClick="getService"
                android:tag="ttalk_check_balance"
                android:text="Balance"/>
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
        </LinearLayout>

        <LinearLayout
            style="@style/Row">
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
            <Button
                style="@style/Cell"
                android:layout_weight="40"
                android:onClick="getService"
                android:tag="ttalk_my_number"
                android:text="My Number"/>
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
        </LinearLayout>

        <!--
        ** Start of EMERGENCY BALANCE section
        -->
        <TextView
            style="@style/HeadingStyle"
            android:text="Emergency Balance:"/>
