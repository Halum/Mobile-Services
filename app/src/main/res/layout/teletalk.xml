            style="@style/Row">
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
            <Button
                style="@style/Cell"
                android:layout_weight="40"
                android:onClick="getService"
                android:tag="ttalk_get_emergency_balance"
                android:text="Get Balance"/>
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
        </LinearLayout>

        <LinearLayout
            style="@style/Row">
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
            <Button
                style="@style/Cell"
                android:layout_weight="40"
                android:onClick="getService"
                android:tag="ttalk_check_emergency_balance"
                android:text="Check Balance"/>
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
        </LinearLayout>
        <!--
        ** Start of CALL BACK section
        -->
        <TextView
            style="@style/HeadingStyle"
            android:text="Call Back:"/>
        <LinearLayout
            style="@style/Row">
            <EditText
                style="@style/Cell"
                android:inputType="number"
                android:id="@+id/ttalk_callback"
                android:layout_weight="60"/>
            <Space
                style="@style/Cell"
                android:layout_weight="5"/>
            <Button
                style="@style/Cell"
                android:layout_weight="35"
                android:text="Phone Book"/>
        </LinearLayout>

        <LinearLayout
            style="@style/Row">
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
            <Button
                style="@style/Cell"
                android:layout_weight="40"
                android:tag="ttalk_callback"
                android:onClick="getService"
                android:text="Call Back"/>
            <Space
                style="@style/Cell"
                android:layout_weight="30"/>
        </LinearLayout>

